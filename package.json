{
  "name": "@dnd-mapp/dma-ui-angular",
  "version": "1.9.0",
  "license": "UNLICENSED",
  "description": "An Angular library containing themed and styled presentational UI components",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dnd-mapp/dma-ui-angular.git",
    "directory": "libs/dma-ui-angular"
  },
  "author": {
    "email": "mail.dndmapp@gmail.com",
    "name": "NoNamer777"
  },
  "scripts": {
    "build": "pnpm exec ng build",
    "buid:dev": "pnpm exec ng build -c dev",
    "build-storybook": "pnpm exec ng run dma-ui-angular:build-storybook",
    "storybook": "pnpm exec ng run dma-ui-angular:storybook",
    "test": "pnpm exec vitest run",
    "test:dev": "pnpm exec vitest",
    "test:install-browser": "pnpm exec playwright install chromium",
    "test:coverage-reports": "pnpm exec vite preview --outDir reports",
    "lint": "pnpm exec ng lint",
    "format:check": "pnpm exec prettier -l .",
    "format:write": "pnpm exec prettier -w .",
    "prepublishOnly": "node build/pre-publish.mjs",
    "generate-icon": "pnpm exec ts-node tools/generate-icon-component/index.mts"
  },
  "packageManager": "pnpm@10.24.0",
  "engines": {
    "node": ">=24",
    "npm": ">=11",
    "pnpm": ">=10"
  },
  "sideEffects": false,
  "publishConfig": {
    "directory": "dist/dma-ui-angular",
    "registry": "https://npm.pkg.github.com/"
  },
  "files": [
    "**/*"
  ],
  "exports": {
    "./styles/*": {
      "sass": "./styles/*"
    }
  },
  "dependencies": {
    "tslib": "~2.8.0"
  },
  "peerDependencies": {
    "@angular/cdk": "~21.0.0",
    "@angular/common": "~21.0.0",
    "@angular/compiler": "~21.0.0",
    "@angular/core": "~21.0.0",
    "@angular/forms": "~21.0.0",
    "@angular/platform-browser": "~21.0.0",
    "rxjs": "~7.8.0"
  },
  "devDependencies": {
    "@analogjs/platform": "~2.1.0",
    "@analogjs/vite-plugin-angular": "~2.1.0",
    "@analogjs/vitest-angular": "~2.1.0",
    "@angular/build": "~21.0.0",
    "@angular/cli": "~21.0.0",
    "@angular/compiler-cli": "~21.0.0",
    "@eslint/js": "~9.39.0",
    "@inquirer/prompts": "~8.0.0",
    "@storybook/addon-docs": "~10.1.0",
    "@storybook/angular": "~10.1.0",
    "@types/node": "~24.10.0",
    "@vitest/browser-playwright": "~4.0.0",
    "@vitest/coverage-v8": "~4.0.0",
    "@vitest/ui": "~4.0.0",
    "angular-eslint": "~21.0.0",
    "eslint": "~9.39.0",
    "eslint-config-prettier": "~10.1.0",
    "eslint-plugin-storybook": "~10.1.0",
    "jsdom": "~27.2.0",
    "ng-packagr": "~21.0.0",
    "playwright": "~1.57.0",
    "prettier": "~3.7.0",
    "prettier-plugin-organize-imports": "~4.3.0",
    "storybook": "~10.1.0",
    "ts-node": "~10.9.0",
    "typescript": "~5.9.0",
    "typescript-eslint": "~8.48.0",
    "vite": "~7.2.0",
    "vite-tsconfig-paths": "~5.0.0",
    "vitest": "~4.0.0",
    "webpack": "~5.103.0"
  }
}
